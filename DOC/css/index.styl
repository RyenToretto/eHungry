$footerColor = #fff
$contentColor = #f5f5f5
$themeColor = #02a774

$fontSize1 = 1rem

$header = 45px
$_header = -45px

$footer = 50px
$footer_half = 25px
$_footer = -50px

html
body
    width 100%
    height 100%
    overflow hidden    // 禁止 2 滚动条 、滚轮
    
    font-size 0.7rem
    #wrap
        width 100%
        height 100%
        box-sizing border-box
        padding-bottom $footer
        
        background-color $contentColor
        .home_page
        .search_page
        .goods_page
        .user_page
            display none
            width 100%
            padding-bottom $footer
        
            background-color $contentColor
            &.active
                display block
        .home_page
            padding-top $header
            #header
                position fixed
                top 0
                left 0
                width 100%
                height $header
                
                font-size $fontSize1
                color #fff
                background-color: $themeColor
                display flex
                align-items center
                justify-content space-between
                a
                    color #fff
                #search_btn
                    margin-left 15px
                    height 25px
                i
                    font-size 25px
                #pos_info
                    font-size 20px
                    width 50%
                    margin-left 50px
                #login_register
                    margin-right 15px
                    
                    font-size 14px
            #shop_nav
                width 100%
                
                background-color: #fff
                >h3
                    height 30px
                    color #999
                    i
                        font-size 16px
                    span
                        font-size 14px
                >ul
                    width 100%
                    >li
                        width 100%
                        position relative
                        &:after
                            content ""
                            display block
                            width 100%
                            height 1px
                            position absolute
                            left 0
                            bottom 0
                            z-index 10
                            background-color: #f1f1f1
                        >a
                            width 100%
                            padding 15px 8px
                            display flex
                            justify-content space-between
                            img
                                width 23%
                                height 75px
                            .shop_info
                                width 77%
                                height 75px
                                margin-left 10px
                                display flex
                                flex-direction column
                                justify-content space-between
                                .info_top
                                    margin-right 8px
                                    color #333
                                    font-size 16px
                                    font-weight 700
                                    display flex
                                    justify-content space-between
                                    >div:first-child
                                        width 200px
                                        display flex
                                        justify-content space-between
                                        align-items center
                                        span:first-child
                                            width 27px
                                            padding 2px
                                            margin-right 5px
                                            
                                            font-size 12px
                                            background-color rgb(255, 217, 48)
                                    >div:last-child
                                        width 70px
                                        display flex
                                        justify-content center
                                        align-items center
                                        span
                                            padding 0 2px
                                            border 1px solid #f1f1f1
                                            border-radius 2px
                                            
                                            color #999
                                            font-size 10px
                                .info_center
                                    width 100%
                                    color #666
                                    font-size 10px
                                    display flex
                                    align-items center
                                    justify-content space-between
                                    div:last-child
                                        padding 1px
                                        margin-right 16px
                                        
                                        color #02a774
                                        font-size 12px
                                        border-radius 2px
                                        border 1px solid #02a774
                                        transform scale(0.7)
                                .info_bottom
                                    color #666
                                    font-size 12px
                                    margin-bottom 4px
        
        .search_page
            #search_title
                width 100%
                height 45px
                
                line-height 45px
                color #fff
                background-color $themeColor
                font-size 22px
                text-align center
            #search_box
                width 100%
                height 60px
                box-sizing border-box
                padding 12px 8px
                
                background-color: #fff
                display flex
                justify-content space-between
                align-items center
                input
                    width 79%
                    height 35px
                    box-sizing border-box
                    padding 0 4px
                    border 4px solid #f2f2f2
                    border-radius 2px

                    font-size 14px
                    font-weight 700
                    color #333
                    background-color #f2f2f2
                button
                    width 18%
                    height: 35px;
                    padding: 0 4px;
                    border 4px solid #02a774
                    border-radius: 2px;
                    
                    font-size 16px
                    font-weight: bold;
                    color #fff
                    background-color #02a774
        .goods_page
            #goods_title
                width 100%
                height 45px
        
                line-height 45px
                color #fff
                background-color $themeColor
                font-size 22px
                text-align center
            #goods_box
                padding-top 95px
                display flex
                flex-direction column
                align-items center
                justify-content center
                img
                    display block
                    width 60%
                    height 30%
                p
                    font-size 17px
                    color #6a6a6a
                    padding 10px 0
                button
                    display inline-block
                    padding 10px 20px
                    border 0
                    border-radius 5px
                    
                    font-size 14px
                    color #fff
                    background #02a774
        #user_page
            #user_title
                width 100%
                height 45px
        
                line-height 45px
                color #fff
                background-color $themeColor
                font-size 22px
                text-align center
    #footer
        position relative
        z-index 10
        width 100%
        height $footer
        margin-top $_footer
        
        line-height $footer
        text-align center
        font-size $fontSize1
        background-color $footerColor
        display flex
        align-items center
        justify-content space-around
        >div
            width 4rem
            height 100%
            >a
                width 100%
                height 100%
                
                font-size 12px
                color #999
                &.active
                    color $themeColor
                span
                    display block
                    height $footer_half
                    line-height $footer_half
                    margin-top -4px
                .iconfont
                    display block
                    height $footer_half
                    margin-top 6px
                    
                    line-height $footer_half
                    font-size 22px
                    